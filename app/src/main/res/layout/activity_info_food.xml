<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palov"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kerakli mahsulotlar"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/desired_product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24sp"
            android:padding="15dp"
            android:text="6-7 dona  sabzi 0,5 kg goâ€™sht 1 ta piyoz 700 gr guruch."
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taom tayyorlanish tartibi"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/method_food_preparation_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24sp"
            android:padding="15dp"
            android:text="Empty"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>